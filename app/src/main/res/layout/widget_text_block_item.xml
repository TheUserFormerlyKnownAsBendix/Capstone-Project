<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/widget_text_block_item_control_container"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/widget_text_block_item_control"
            android:layout_width="@dimen/list_item_primary_control_size"
            android:layout_height="@dimen/list_item_primary_control_size"
            app:cardCornerRadius="@dimen/list_item_primary_control_radius"
            app:cardBackgroundColor="?attr/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_text_format_white_24dp"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widget_text_block_item_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <EditText
            android:id="@+id/widget_text_block_item_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/widget_text_block_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>