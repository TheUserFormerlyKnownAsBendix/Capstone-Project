<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/widget_text_block_item_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/list_item_primary_control_size"
            android:layout_height="@dimen/list_item_primary_control_size"
            app:cardCornerRadius="@dimen/list_item_primary_control_radius"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            app:cardBackgroundColor="?attr/colorPrimary"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/widget_text_block_item_control_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <EditText
        android:id="@+id/widget_text_block_item_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/widget_text_block_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_weight="1"/>

</LinearLayout>