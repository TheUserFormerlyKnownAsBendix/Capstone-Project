<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/activity_sign_in_icon"
        android:layout_width="@dimen/credits_icon_size"
        android:layout_height="@dimen/credits_icon_size"
        android:layout_centerInParent="true"
        android:src="@drawable/web_hi_res_512"
        android:contentDescription="@string/icon"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/activity_sign_in_button"
        android:layout_below="@+id/activity_sign_in_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_centerInParent="true">
    </com.google.android.gms.common.SignInButton>

</RelativeLayout>
