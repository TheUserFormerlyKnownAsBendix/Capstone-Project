<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_file_list_item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/list_item_primary_control_size"
        android:layout_height="@dimen/list_item_primary_control_size"
        app:cardCornerRadius="@dimen/list_item_primary_control_radius"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/list_item_primary_control_image"
            android:layout_height="@dimen/list_item_primary_control_image"
            android:layout_gravity="center"
            android:src="@drawable/ic_description_white_24dp"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/widget_file_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/widget_file_list_item_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_file_list_item_more"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:scaleType="center"
        android:background="?attr/selectableItemBackgroundBorderless"/>

</LinearLayout>